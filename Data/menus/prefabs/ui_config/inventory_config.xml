<!--
	INVENTORY CONFIG
	CONFIG VERSION : 15 Slot, Extended, Default fonts
	
	CONFIG FOR BTMOD BY : Beider & Tikigod
	CONFIG BY : Beider
	
	If you are make changes and want to test them without restarting the game then
	open your console by hitting the tilde key (key left of the 1 key). Then type,
		
		reload inventorymenu
		
	Then hit the Tilde key again to exit the console.

-->
<rect name="Imp_UI_Settings">
	
	<!-- INVENTORY TEXT
	
		- Changes the font of the item names and stat values
		- Changes color of the text (RGB values)
		- Change the opacity of the text
	 -->
	
	<_inventoryfont> 3 </_inventoryfont> 		<!-- DEFAULT : 3 -->
	<_inventoryred> 117 </_inventoryred> 		<!-- DEFAULT : 117 -->
	<_inventorygreen> 59 </_inventorygreen>		<!-- DEFAULT : 59 -->
	<_inventoryblue> 33 </_inventoryblue>		<!-- DEFAULT : 33 -->
	<_inventoryalpha> 255 </_inventoryalpha> 	<!-- DEFAULT : 255 -->
	
	<!-- ITEM COUNT ADDITIONAL OPTIONS
	
		- Options to adjust the item count font and positioning
	 -->
	
	<_inventorycountfont> 3 </_inventorycountfont> 			<!-- DEFAULT : 3  -->
	<_inventorycountx> 65 </_inventorycountx>			<!-- DEFAULT : 65 -->
	<_inventorycounty> 13 </_inventorycounty>			<!-- DEFAULT : 13 -->
	
	<!-- INVENTORY LIST ICONS
	
		- Adjusts the icon for each item
	 -->
	
	<_inventoryiconwidth> 32 </_inventoryiconwidth>		<!-- DEFAULT : 32 -->
	<_inventoryiconheight> 32 </_inventoryiconheight>	<!-- DEFAULT : 32 -->
	<_inventoryiconzoom>50</_inventoryiconzoom>		<!-- DEFAULT : 50 --> <!-- 50 = 50%, 100 = 100% -->
	
	<!-- INVENTORY LIST
	
		- Adjusts the number of items shown in the list
		- Adjust the height spacing between items in the list
		
		NOTE:
		Make sure _inventorylistheightneg is the same as _inventorylistheight only negative,
		else you will get scrolling bugs.
	 -->
	
	<_inventorylistnum> 15 </_inventorylistnum>				<!-- DEFAULT : 15 -->
	<_inventorylistheight> 40 </_inventorylistheight>			<!-- DEFAULT : 40 -->
		<!-- This has to be the same as above only negative -->
	<_inventorylistheightneg> -40 </_inventorylistheightneg>		<!-- DEFAULT : -40 -->
	
	<!-- INVENTORY HEIGHT EXTENTION
		- &true; = Extend
		- &false; = No extention
		
		NOTE:
		If you set this to true you probably have to increase the amount of items
		listed. Set it to false and you have to reduce it.
	-->
	
	<_extendinventory> &true; </_extendinventory>	<!-- DEFAULT : &true; -->
	
	<!-- INVENTORY LIST HEADERS
	
		- Adjust the headers for the inventory
		- Also adjust all the icons in the header
	 -->
	
	<_invlistheaderfont> 3 </_invlistheaderfont> 				<!-- DEFAULT : 3 -->
	<_invlistheaderred> 51 </_invlistheaderred>				<!-- DEFAULT : 51 -->
	<_invlistheadergreen> 79 </_invlistheadergreen>				<!-- DEFAULT : 79 -->
	<_invlistheaderblue> 142 </_invlistheaderblue>				<!-- DEFAULT : 142 -->
	<_invlistheaderalpha> 255 </_invlistheaderalpha>			<!-- DEFAULT : 255 -->
	<_invlistheadericonalpha> 255 </_invlistheadericonalpha>		<!-- DEFAULT : 255 -->
	<_invlistheadborderoffsety> 5 </_invlistheadborderoffsety>		<!-- DEFAULT : 5 -->
	<_inventorylistheadoffsety> 5 </_inventorylistheadoffsety>		<!-- DEFAULT : 5 -->
	
	
	<!-- EXTRA DATA
	
		- Adjust the data at the bottom of the list, encumberance, armor, money.
	 -->
	
	<_invextrafont> 1 </_invextrafont>			 	<!-- DEFAULT : 1 -->
	<_invextrared> 117 </_invextrared>				<!-- DEFAULT : 117 -->
	<_invextragreen> 59 </_invextragreen>				<!-- DEFAULT : 59 -->
	<_invextrablue> 33 </_invextrablue>				<!-- DEFAULT : 33 -->
	<_invextraalpha> 255 </_invextraalpha>				<!-- DEFAULT : 255 -->
	
	<!-- INVENTORY MARKER
	
		- Changes the blue line behind equipped items
		- Should be changed if you modify the amount of items in the list
	 -->
	
	<_invmarkeralpha> 160 </_invmarkeralpha>		<!-- DEFAULT : 160 -->
	<_invmarkerwidth> 643 </_invmarkerwidth>		<!-- DEFAULT : 637 -->
	<_invmarkerheight> 35 </_invmarkerheight>		<!-- DEFAULT : 35 -->
	<_invmarkercropy> 5 </_invmarkercropy>			<!-- DEFAULT : 5 -->
	<_invmarkerx> 7 </_invmarkerx>				<!-- DEFAULT : 7 -->
	<_invmarkery> 3 </_invmarkery>				<!-- DEFAULT : 3 -->
	
	
	<!-- TEXTURES
	
		- This is to allow skinning of the menu screens	
	-->
	
	<_smb1> Menus\Shared\shared_main_background_1.dds </_smb1>
	<_smb2> Menus\Shared\shared_main_background_2.dds </_smb2>
	
	<_s01t> Menus\Shared\shared_01_tab.dds </_s01t>
	<_s02t> Menus\Shared\shared_02_tab.dds </_s02t>
	<_s03t> Menus\Shared\shared_03_tab.dds </_s03t>
	<_s04t> Menus\Shared\shared_04_tab.dds </_s04t>
	<_s05t> Menus\Shared\shared_05_tab.dds </_s05t>
	
	<_iem1> Menus\Inventory\inv_equiped_marker_1.dds </_iem1>
	
	<_ibt> Menus\Inventory\inv_border_top.dds </_ibt>
	<_ibm> Menus\Inventory\inv_border_middle.dds </_ibm>
	<_ibb> Menus\Inventory\inv_border_bottom.dds </_ibb>
	
	<_asi> Menus\Shared\all_small_icons.dds </_asi>
	<_ati> Menus\Shared\all_tabs_icons.dds </_ati>
	
	<_gtso> Menus\Shared\general_tab_selection_off.dds </_gtso>
	<_gtson> Menus\Shared\general_tab_selection_on.dds </_gtson>
	
	<_sdbl> Menus\Shared\shared_decor_blue_left.dds </_sdbl>
	<_sdbr> Menus\Shared\shared_decor_blue_right.dds </_sdbr>
	
</rect>